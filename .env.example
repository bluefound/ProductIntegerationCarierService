# =================================
# Carrier Integration Service
# Environment Configuration
# =================================

# UPS API Configuration
UPS_CLIENT_ID=your_ups_client_id
UPS_CLIENT_SECRET=your_ups_client_secret
UPS_MERCHANT_ID=your_6_digit_account_number

# UPS API Base URL
# Production: https://onlinetools.ups.com
# Sandbox: https://wwwcie.ups.com
UPS_BASE_URL=https://wwwcie.ups.com

# OAuth Token URL
UPS_OAUTH_URL=https://wwwcie.ups.com/security/v1/oauth/token

# =================================
# Application Settings
# =================================

# Environment: development | production | test
NODE_ENV=development

# Logging level: debug | info | warn | error
LOG_LEVEL=info

# Request timeout in milliseconds
REQUEST_TIMEOUT_MS=30000

# OAuth token refresh buffer in seconds (refresh before expiry)
TOKEN_REFRESH_BUFFER_SECONDS=300
